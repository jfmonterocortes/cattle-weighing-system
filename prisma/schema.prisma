generator client {
  provider = "prisma-client-js"
engineType      = "library"
}

datasource db {
  provider = "postgresql"
}

model Person {
  id     Int     @id @default(autoincrement())
  name   String
nameKey String  @unique
  phone  String? // opcional pero lo usaremos como identificador junto con name
  cedula String? @unique
  user   User?

  // Relaciones inversas (si no las tienes)
  sellerSheets WeighingSheet[] @relation("SellerSheets")
  buyerSheets  WeighingSheet[] @relation("BuyerSheets")

}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role
  personId Int    @unique

  person Person @relation(fields: [personId], references: [id])

  createdSheets WeighingSheet[]
}

model WeighingSheet {
  id            Int      @id @default(autoincrement())
  date          DateTime @default(now())
  totalWeight   Int?
  averageWeight Int?

  sellerId    Int
  buyerId     Int
  createdById Int

  seller    Person @relation("SellerSheets", fields: [sellerId], references: [id])
  buyer     Person @relation("BuyerSheets", fields: [buyerId], references: [id])
  createdBy User   @relation(fields: [createdById], references: [id])

  cattle Cattle[]
}

model Cattle {
  id              Int     @id @default(autoincrement())
  weighingSheetId Int
  number          String
  type            String // vaca, toro, bufalo, etc.
  sex             String // macho/hembra
  weight          Int
  mark            String? // letras o marca opcional

  weighingSheet WeighingSheet @relation(fields: [weighingSheetId], references: [id])
}

enum Role {
  ADMIN
  CLIENT
}
